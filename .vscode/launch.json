    "version": "0.2.0",
    "configurations": [
        {
            "name": "netcoredbg",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CodeDuelPlatform/bin/Debug/net8.0/CodeDuelPlatform.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CodeDuelPlatform",
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "powershell",
                "pipeArgs": ["-Command"],
                "debuggerPath": "D:/SharpDebugger/netcoredbg/netcoredbg",
                "debuggerArgs": ["--interpreter=vscode"],
                "quoteArgs": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
    ]
}